<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.digitalcharitease.layoutdemos.MainActivity">

    <Button
        android:text="Simple List 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:id="@+id/list_view_button_1"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Simple List 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_button_2"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/list_view_button_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Custom List 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_button_3"
        android:layout_below="@+id/list_view_button_2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Async Simple List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_view_button_3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/simple_async_list_button"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
